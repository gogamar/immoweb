<p class="mt-2 text-sm leading-6 text-gray-500">
  <%- if controller_name != 'sessions' %>
    Already a member?
    <%= link_to "Log in", new_session_path(resource_name), class: "font-semibold text-indigo-600 hover:text-cyan-500" %><br />
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    Not a member?
    <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold text-indigo-600 hover:text-cyan-500" %><br />
  </p>
<% end %>
</p>
