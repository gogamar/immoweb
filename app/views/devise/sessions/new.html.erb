<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light py-5 px-3">
  <div class="card shadow rounded-3 w-100" style="max-width: 50vw; z-index: 10;">
    <div class="card-body p-5">
      <h2 class="card-title text-center mb-4">
        <%= t(".sign_in") %>
      </h2>
      <%# render "devise/shared/links", class: "d-block text-center text-muted mb-4" %>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-3" }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.input :email,
                        label: false,
                        autofocus: true,
                        required: true,
                        input_html: { autocomplete: "email", class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.input :password,
                        label: false,
                        required: true,
                        input_html: { autocomplete: "current-password", class: "form-control" } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me,
        class: "form-check-input me-2",
        id:    "remember_me" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="d-grid">
          <%= f.button :submit,
                         t(".sign_in"),
                         class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
