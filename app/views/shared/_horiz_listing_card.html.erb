<li class="col-span-1 divide-y divide-gray-200 rounded-lg bg-white shadow flex">
  <div class="group aspect-h-3 aspect-w-10 block w-1/2 overflow-hidden rounded-l-lg bg-gray-100 focus-within:ring-2 focus-within:ring-sky-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 relative">
    <%= link_to listing, class: "object-cover group-hover:opacity-75" do %>
      <%= image_tag listing.image_urls.first.url %>
    <% end %>
    <% if listing.mark.present? %>
      <div class="absolute bottom-0 left-0 right-0 top-0 grid place-items-center text-red-700 text-4xl uppercase tracking-wider font-medium">
        <%= t('sold') if listing.mark == "sold" %>
        <%= t('rented') if listing.mark == "rented" %>
      </div>
    <% end %>
  </div>
  <div class="flex flex-col w-1/2 pt-6 ps-6 pe-6 divide-y divide-gray-200">
    <%= link_to listing do %>
      <div>
        <div class="flex items-center justify-between space-x-3">
          <% translated_typestreet = (listing.typestreet.present? && Listing::TYPESTREET.has_value?(listing.typestreet)) ? t(listing.typestreet) : listing.typestreet %>
          <% if listing.town_area.present? %>
            <% combined_title = "#{t(listing.listing_subtype)} #{t('in')} #{translated_typestreet} #{listing.namestreet} #{listing.town_area}" %>
          <% elsif listing.namestreet.present? %>
            <% combined_title = "#{t(listing.listing_subtype)} #{t('in')} #{translated_typestreet} #{listing.namestreet}" %>
          <% else %>
            <% combined_title = t(listing.listing_subtype) %>
          <% end %>
          <h3 class="truncate font-medium text-sky-900"><%= combined_title %></h3>
          <span class="inline-flex flex-shrink-0 items-center rounded-full bg-green-50 px-1.5 py-0.5 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20"><%= listing.operation == "sale" ? t('on_sale') : t('for_rent') %></span>
        </div>
        <h3 class="font-medium text-grey-900"><%= listing.town_name %></h3>
        <div class="mt-3">
          <h2 class="sr-only"><%= t("price") %></h2>
          <% price = listing.salesprice.present? ? listing.salesprice : listing.rentprice %>
          <p class="text-2xl text-gray-900"><%= number_to_currency(price, unit: "€", separator: ",", delimiter: ".", precision: 0, format: "%n%u") %></p>
          <p class="mt-1 truncate text-sm text-gray-500"><%= "#{listing.bedrooms} hab. " if listing.bedrooms.present? %><%= "#{listing.built_area.round} m² " if listing.built_area.present? %></p>
        </div>
        <div class="mt-4">
          <h3 class="text-sm font-medium text-sky-900 font-bold"><%= listing.send("title_#{locale}")&.capitalize %></h3>
          <p class="mt-1 truncate text-sm text-gray-500"><%= listing.send("description_#{locale}")&.capitalize %></p>
        </div>
      </div>
    <% end %>
    <div class="mt-auto -mb-px flex divide-x divide-gray-200">
