      <%= link_to t('on_sale'), sale_listings_path, class: "block border-l-4 py-2 pl-3 pr-4 text-base font-medium sm:pl-5 sm:pr-6 #{ current_page?(sale_listings_path) ? mobile_current : mobile_default }" %>
      <%= link_to t('for_rent'), rental_listings_path, class: "block border-l-4 py-2 pl-3 pr-4 text-base font-medium sm:pl-5 sm:pr-6 #{ current_page?(rental_listings_path) ? mobile_current : mobile_default }" %>
      -->
      <%= link_to t('about_us'), about_us_path, class: "block border-l-4 py-2 pl-3 pr-4 text-base font-medium sm:pl-5 sm:pr-6 #{ current_page?(about_us_path) ? mobile_current : mobile_default }" %>
      <%= link_to t('contact'), contact_us_path, class: "block border-l-4 py-2 pl-3 pr-4 text-base font-medium sm:pl-5 sm:pr-6 #{ current_page?(contact_us_path) ? mobile_current : mobile_default }" %>
