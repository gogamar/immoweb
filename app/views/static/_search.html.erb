<div class="container mx-auto p-4 bg-white rounded">
  <form class="flex flex-wrap items-center gap-2">
    <!-- Check-in Date -->
    <input type="date" placeholder="Check-in" class="px-4 py-2 border border-gray-300 rounded-md text-gray-600 focus:ring-blue-500 focus:border-blue-500" name="checkin">
    <!-- Check-out Date -->
    <input type="date" placeholder="Check-out" class="px-4 py-2 border border-gray-300 rounded-md text-gray-600 focus:ring-blue-500 focus:border-blue-500" name="checkout">
    <!-- Persons -->
    <select class="px-4 py-2 border border-gray-300 rounded-md text-gray-600 focus:ring-blue-500 focus:border-blue-500" name="persons">
      <option value="1">1 Person</option>
      <option value="2">2 Persons</option>
      <option value="3">3 Persons</option>
      <option value="4">4 Persons</option>
      <!-- Add more options as needed -->
    </select>
    <!-- Location -->
    <input type="text" placeholder="Location" class="px-4 py-2 border border-gray-300 rounded-md text-gray-600 focus:ring-blue-500 focus:border-blue-500" name="location">
    <!-- Search Button -->
    <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
      Search
    </button>
  </form>
</div>
