<!-- Page content-->
<!-- Breadcrumb-->
<div class="container mt-5 mb-md-4 pt-5">
  <%= render 'shared/breadcrumb' %>
</div>
<!-- Hero-->
<section class="container mb-5 pb-2 pb-md-4 pb-lg-5">
  <div class="row align-items-md-start align-items-center gy-4">
    <div class="col-lg-5 col-md-6">
      <div class="mx-md-0 mx-auto mb-md-5 mb-4 pb-md-4 text-md-start text-center" style="max-width: 416px;">
        <h1 class="mb-4"><%= t('get_in_touch') %></h1>
        <p class="mb-0 fs-lg text-muted"><%= t('get_in_touch_intro1') %></p>
        <p class="mb-0 fs-lg text-muted"><%= t('get_in_touch_intro2') %></p>
      </div>
    </div>
    <div class="col-md-6 offset-lg-1">
      <div class="card border-0 bg-secondary p-sm-3 p-2">
        <div class="card-body m-1">
          <%= render 'contact_us_form' %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Contact cards-->
<section class="container mb-5 pb-2 pb-md-4 pb-lg-5">
  <div class="row g-4">
    <% @offices.each do |office| %>
      <!-- Item-->
      <div class="col-md-4">
        <a class="icon-box card card-hover h-100" href="tel:647934766">
          <div class="card-body">
            <div class="icon-box-media text-primary rounded-circle shadow-sm mb-3"><i class="fi-device-mobile"></i></div>
            <h3 class="h4 icon-box-title mb-0 opacity-90"><%= office.name %></h3>
            <span class="d-block mb-1 text-body"><%= office.address %></span>
            <span class="d-block mb-1 text-body"><%= office.phone_number %></span>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</section>
<div style="width: 100%; height: 400px;" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
